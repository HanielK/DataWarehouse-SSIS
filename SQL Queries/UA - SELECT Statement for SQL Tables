/**************************************************************
UA -SELECT STATEMENTS FOR IFS Views
**************************************************************/
USE [PSDW_IFS_UA]
GO


SELECT *FROM OPENQUERY(IFS_TST_APP10, '
    SELECT COMPANY_ID
      ,EMP_NO
      ,PERSON_ID
      ,FNAME
      ,LNAME
      ,INTERNAL_DISPLAY_NAME
      ,EMPLOYEE_STATUS
      ,EMPLOYMENT_TYPE
      ,EMPLOYEE_STATUS_SEQ_NO
      ,ORG_CODE
      ,POS_CODE
      ,EMPLOYMENT_START_DATE
      ,EMPLOYMENT_END_DATE
      ,OBJID
      ,OBJVERSION
      ,OBJKEY


    FROM POWE1APP.COMPANY_PERSON

');
GO

SELECT  *FROM OPENQUERY(IFS_TST_APP10, '
    SELECT CUSTOMER_ID
      ,NAME
      ,CREATION_DATE
      ,ONE_TIME_DB
      ,CUSTOMER_CATEGORY
      ,OBJKEY
      ,OBJVERSION
      ,OBJID
    FROM POWE1APP.CUSTOMER_INFO

');
GO

